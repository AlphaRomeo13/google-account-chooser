{
  "name" : "Google Account Chooser",
  "version" : "0.1",
  "description" : "Automatically select Google account",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "https://accounts.google.com/AccountChooser",
    "https://*.bamboohr.com/login.php",
    "https://jira.*.*/login.jsp"
  ],
  "optional_permissions": [
    "https://accounts.google.com/*"
  ],
  "icons": { "16": "res/gray16x16.png", "48": "res/gray100x100.png", "128": "res/gray100x100.png" },
  "browser_action": {
    "default_icon": "res/gray16x16.png"
  },
  "background": {
    "scripts": ["extension.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://accounts.google.com/AccountChooser"],
      "js": ["google_accounts.js"]
    },
    {
      "matches": ["https://*.bamboohr.com/login.php"],
      "js": ["click_sso_button/bamboohr.js"]
    },
    {
      "matches": ["https://jira.greenqloud.com/login.jsp"],
      "js": ["click_sso_button/jira.js"]
    }


  ],

  "manifest_version": 2
}
